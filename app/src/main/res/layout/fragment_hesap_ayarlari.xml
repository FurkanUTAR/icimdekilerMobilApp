<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.hesapAyarlariFragment">


    <EditText
        android:id="@+id/ePostaText"
        android:layout_width="341dp"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/ePosta"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/isimSoyisimText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/isimSoyisimText"
        app:layout_constraintTop_toBottomOf="@+id/isimSoyisimText" />

    <EditText
        android:id="@+id/isimSoyisimText"
        android:layout_width="341dp"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/isimSoyisim"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/kullaniciAdiText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/kullaniciAdiText"
        app:layout_constraintTop_toBottomOf="@+id/kullaniciAdiText" />

    <EditText
        android:id="@+id/kullaniciAdiText"
        android:layout_width="341dp"
        android:layout_height="43dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="@string/kullaniciAdi"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/telNoText"
        android:layout_width="341dp"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/telNo"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/ePostaText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ePostaText"
        app:layout_constraintTop_toBottomOf="@+id/ePostaText" />

    <Button
        android:id="@+id/guncelleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/guncelle"
        app:layout_constraintEnd_toEndOf="@+id/hesabiSilButton"
        app:layout_constraintStart_toStartOf="@+id/hesabiSilButton"
        app:layout_constraintTop_toBottomOf="@+id/parolaDegistirButton" />

    <Button
        android:id="@+id/hesabiSilButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Hesabı Sil"
        app:layout_constraintEnd_toEndOf="@+id/kullaniciAdiText"
        app:layout_constraintStart_toStartOf="@+id/kullaniciAdiText"
        app:layout_constraintTop_toBottomOf="@+id/guncelleButton" />

    <Button
        android:id="@+id/parolaDegistirButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Parolayı Değiştir"
        app:layout_constraintStart_toStartOf="@+id/telNoText"
        app:layout_constraintTop_toBottomOf="@+id/telNoText" />
</androidx.constraintlayout.widget.ConstraintLayout>